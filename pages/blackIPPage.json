{
  "type": "page",
  "title": "IP黑名单管理",
  "toolbar": [
    {
      "type": "button",
      "actionType": "dialog",
      "label": "新增",
      "icon": "fa fa-plus pull-left",
      "primary": true,
      "dialog": {
        "title": "新增黑名单IP",
        "body": {
          "type": "form",
          "api": "post:/waf/api/v1/ip",
          "body": [
            {
              "type": "input-text",
              "name": "ip",
              "label": "IP",
              "required": true
            },
            {
              "type": "hidden",
              "name": "type",
              "value": 1,
              "required": true
            },
            {
              "type": "input-number",
              "name": "expiration",
              "label": "TTL",
              "labelRemark": "生存时间，单位为秒",
              "required": true
            }
          ]
        }
      }
    }
  ],
  "body": [
    {
      "type": "crud",
      "api": "/waf/api/v1/ip?page=${page}&perPage=${perPage}&keywords=${keywords}&type=1",
      "defaultParams": {
        "perPage": 10
      },
      "headerToolbar": [
        "statistics",
        "switch-per-page",
        "export-excel",
        {
          "type": "pagination",
          "align": "right"
        }
      ],
      "footerToolbar": [
        "statistics",
        "switch-per-page",
        "pagination"
      ],
      "syncLocation": false,
      "filter": {
        "title": "条件搜索",
        "body": [
          {
            "type": "group",
            "body": [
              {
                "type": "input-text",
                "name": "keywords",
                "label": "关键词",
                "clearable": true,
                "placeholder": "通过关键词搜索",
                "size": "lg"
              }
            ]
          }
        ],
        "actions": [
          {
            "type": "reset",
            "label": "重置"
          },
          {
            "type": "submit",
            "level": "primary",
            "label": "查询"
          }
        ]
      },
      "columns": [
        {
          "label": "IP",
          "name": "ip",
          "copyable": true
        },
        {
          "label": "过期时间",
          "name": "expiration"
        },
        {
          "type": "operation",
          "label": "操作",
          "fixed": "right",
          "buttons": [
            {
              "type": "button",
              "label": "删除",
              "level": "danger",
              "actionType": "ajax",
              "tooltip": "删除",
              "confirmText": "确认要删除?",
              "api": {
                "method": "delete",
                "url": "/waf/api/v1/ip",
                "data": {
                  "ip": "${ip}",
                  "type": 1
                }
              }
            }
          ]
        }
      ]
    }
  ]
}