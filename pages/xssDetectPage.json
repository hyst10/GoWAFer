{
  "type": "page",
  "title": "xss攻击防御",
  "toolbar": [
    {
      "type": "button",
      "actionType": "dialog",
      "label": "新增",
      "icon": "fa fa-plus pull-left",
      "primary": true,
      "dialog": {
        "title": "新增规则",
        "body": {
          "type": "form",
          "mode": "horizontal",
          "api": "post:/waf/api/v1/xssDetect",
          "body": [
            {
              "type": "input-text",
              "name": "rule",
              "label": "防护规则",
              "required": true
            }
          ]
        }
      }
    }
  ],
  "body": [
    {
      "type": "crud",
      "api": "/waf/api/v1/xssDetect",
      "defaultParams": {
        "perPage": 10
      },
      "headerToolbar": [
        "statistics",
        "switch-per-page",
        {
          "type": "export-csv",
          "label": "导出规则",
          "filename": "xssDetectRules"
        },
        {
          "type": "pagination",
          "align": "right"
        }
      ],
      "footerToolbar": [
        "statistics",
        "switch-per-page",
        "pagination"
      ],
      "syncLocation": false,
      "loadDataOnce": true,
      "columns": [
        {
          "label": "防护规则",
          "name": "rule",
          "type": "tpl",
          "tpl": "<div style='background-color: #f2f4f8; padding: 5px; border-radius: 4px; text-align: center;'>${rule}</div>"
        },
        {
          "type": "operation",
          "label": "操作",
          "fixed": "right",
          "buttons": [
            {
              "type": "button",
              "label": "删除",
              "level": "link",
              "actionType": "ajax",
              "className": "text-danger",
              "tooltip": "删除",
              "confirmText": "确认要删除?",
              "api": {
                "method": "delete",
                "url": "/waf/api/v1/xssDetect",
                "data": {
                  "rule": "${rule}"
                }
              }
            }
          ]
        }
      ]
    }
  ]
}