{
  "type": "page",
  "title": "黑名单路由管理",
  "remark": "路由为黑名单路由时禁止访问",
  "toolbar": [
    {
      "type": "button",
      "actionType": "dialog",
      "label": "新增",
      "icon": "fa fa-plus pull-left",
      "primary": true,
      "dialog": {
        "title": "新增黑名单路由",
        "body": {
          "type": "form",
          "api": "post:/waf/api/v1/routing",
          "body": [
            {
              "type": "input-text",
              "name": "routing",
              "label": "路由",
              "required": true
            },
            {
              "type": "select",
              "name": "method",
              "label": "HTTP方法",
              "required": true,
              "options": [
                {
                  "label": "*",
                  "value": "*"
                },
                {
                  "label": "GET",
                  "value": "GET"
                },
                {
                  "label": "POST",
                  "value": "POST"
                },
                {
                  "label": "PUT",
                  "value": "PUT"
                },
                {
                  "label": "DELETE",
                  "value": "DELETE"
                },
                {
                  "label": "HEAD",
                  "value": "HEAD"
                },
                {
                  "label": "OPTIONS",
                  "value": "OPTIONS"
                },
                {
                  "label": "PATCH",
                  "value": "PATCH"
                },
                {
                  "label": "TRACE",
                  "value": "TRACE"
                }
              ]
            },
            {
              "type": "hidden",
              "name": "type",
              "value": 1,
              "required": true
            }
          ]
        }
      }
    }
  ],
  "body": [
    {
      "type": "crud",
      "api": "/waf/api/v1/routing?page=${page}&perPage=${perPage}&keywords=${keywords}&type=1",
      "defaultParams": {
        "perPage": 10
      },
      "headerToolbar": [
        "statistics",
        "switch-per-page",
        "export-excel",
        {
          "type": "pagination",
          "align": "right"
        }
      ],
      "footerToolbar": [
        "statistics",
        "switch-per-page",
        "pagination"
      ],
      "syncLocation": false,
      "filter": {
        "title": "条件搜索",
        "body": [
          {
            "type": "group",
            "body": [
              {
                "type": "input-text",
                "name": "keywords",
                "label": "关键词搜索",
                "clearable": true,
                "placeholder": "通过关键词搜索",
                "size": "lg"
              }
            ]
          }
        ],
        "actions": [
          {
            "type": "reset",
            "label": "重置"
          },
          {
            "type": "submit",
            "level": "primary",
            "label": "查询"
          }
        ]
      },
      "columns": [
        {
          "label": "HTTP方法",
          "name": "method",
          "type": "mapping",
          "map": {
            "*": "<span class='label' style='background-color: #ff5252; color: white;'>*</span>",
            "GET": "<span class='label' style='background-color: #2196f3; color: white;'>GET</span>",
            "POST": "<span class='label' style='background-color: #4caf50; color: white;'>POST</span>",
            "PUT": "<span class='label' style='background-color: #ff9800; color: white;'>PUT</span>",
            "DELETE": "<span class='label' style='background-color: #f44336; color: white;'>DELETE</span>",
            "HEAD": "<span class='label' style='background-color: #9e9e9e; color: white;'>HEAD</span>",
            "OPTIONS": "<span class='label' style='background-color: #673ab7; color: white;'>OPTIONS</span>",
            "PATCH": "<span class='label' style='background-color: #ff5722; color: white;'>PATCH</span>",
            "TRACE": "<span class='label' style='background-color: #ffc107; color: white;'>TRACE</span>"
          }
        },
        {
          "label": "路由",
          "name": "routing",
          "type": "tpl",
          "tpl": "<div style='background-color: #f2f4f8; padding: 5px; font-weight: bold;border-radius: 4px; text-align: center;'>${routing}</div>"
        },
        {
          "type": "operation",
          "label": "操作",
          "fixed": "right",
          "buttons": [
            {
              "type": "button",
              "label": "删除",
              "level": "danger",
              "actionType": "ajax",
              "tooltip": "删除",
              "confirmText": "确认要删除?",
              "api": {
                "method": "delete",
                "url": "/waf/api/v1/routing",
                "data": {
                  "method": "${method}",
                  "routing": "${routing}",
                  "type": 1
                }
              }
            }
          ]
        }
      ]
    }
  ]
}